{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "import", "unicorn", "react", "nextjs", "vitest"],
  "jsPlugins": ["./oxlint-plugin.mjs"],
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-floating-promises": "error",
    "@next/next/no-img-element": "off",
    "peec/no-ternary-in-jsx": "error",
    "peec/no-fetch": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__mocks__/**/*.ts"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off"
      }
    },
    {
      "files": ["shire/**/*.ts"],
      "rules": {
        "no-constant-condition": "off",
        "peec/no-fetch": "off"
      }
    },
    {
      "files": [
        "api/**/*.ts",
        "core/**/*.ts",
        "commons/**/*.ts",
        "types/**/*.ts"
      ],
      "rules": {
        "peec/no-ternary-in-jsx": "off"
      }
    },
    {
      "files": ["mordor/**/*.ts", "mordor/**/*.tsx"],
      "rules": {
        "peec/no-fetch": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules",
    ".next",
    "build",
    "coverage",
    "backend/emulator-fixtures",
    "**/drizzle/**",
    "*.yml",
    "*.gs"
  ]
}